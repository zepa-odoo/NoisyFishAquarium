<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fish_user_loader" model="ir.actions.act_window">
        <field name="name">User</field>
        <field name="res_model">user</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record
            </p>
        </field>
    </record>
    <record id="fish_user_tree_view" model="ir.ui.view">
        <field name="name">Users</field>
        <field name="model">user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone_no"/>
                <field name="email"/>
                <field name="date_of_birth"/>
                <field name="user_role"/>
                <field name="vendors_id" optional="hide"/>
                <field name="address" optional="hide"/>
            </tree>
        </field>
    </record>
    
    <record id="fish_user_form_view" model="ir.ui.view">
        <field name="name">Users</field>
        <field name="model">user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <h1><field name="name" placeholder="eg. Zeel Patel"/></h1>
                    <br/>
                    <div style="margin-top:30px" />
                    <group>
                        <field name="user_role" widget="radio" options="{'horizontal': true}"/>
                    </group>
                    
                    <group string="Contact Details">
                        <group>
                            <field name="phone_no"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="address" placeholder="401-402, Floor 4 IT Tower 3 InfoCity Gate-1, Gandhinagar, Gujarat 382007"/>
                        </group>
                    </group>
                    <div style="margin-top:50px" />
                    <notebook>
                        <page name="Expert">
                            <group>
                                
                                <group>
                                    <field name="experience"/>
                                    <field name="clinic_mail"/>
                                    <field name="clinic_phone_no"/>
                                </group>
                                <group>
                                    <field name="clinic_address"/>
                                </group>
                            </group>
                        </page>
                        <page name="Suppliers">
                            <label for="vendors_id" />
                            <field name="vendors_id"/>

                        </page>
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

</odoo>