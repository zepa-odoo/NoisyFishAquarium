<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="aquarium_food_action" model="ir.actions.act_window">
        <field name="name">Food Category</field>
        <field name="res_model">product.category.food</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record
            </p>
        </field>
    </record>
    <record id="aquarium_food_tree_view" model="ir.ui.view">
        <field name="name">Food Category</field>
        <field name="model">product.category.food</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="aquarium_food_form_view" model="ir.ui.view">
        <field name="name">Food Category</field>
        <field name="model">product.category.food</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name" name="Food category name"/>
                    <h1><field name="name"/></h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>