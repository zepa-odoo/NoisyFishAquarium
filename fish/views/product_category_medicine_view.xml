<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="aquarium_medicine_action" model="ir.actions.act_window">
        <field name="name">Medicine Category</field>
        <field name="res_model">product.category.medicine</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a record
            </p>
        </field>
    </record>
    <record id="aquarium_medicine_tree_view" model="ir.ui.view">
        <field name="name">Medicine Category</field>
        <field name="model">product.category.medicine</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="aquarium_medicine_form_view" model="ir.ui.view">
        <field name="name">Medicine Category</field>
        <field name="model">product.category.medicine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                        <h1>
                            <field name="name" nolabel="1"/>

                        </h1>
                        <div style="position: absolute;right: 40px;top:15px">
                            <field name="product_img" widget="image" class="oe_right oe_avatar" nolabel="1"/>
                        </div>


                        <div style="margin-top:30px"/>
                        <group>
                            <group>
                                <field name="product_description"/>
                                <field name="product_quantity"/>
                            </group>
                            <group>
                                <field name="product_price"/>
                                <field name="product_color_id"/>
                                <!-- <field name="vendor_name"/>  -->
                                <!-- widget="color" -->

                            </group>
                        </group>
                        <div style="margin-top:30px"/>
                    </sheet>
            </form>
        </field>
    </record>
</odoo>